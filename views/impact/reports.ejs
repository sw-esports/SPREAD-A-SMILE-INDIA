delay=\"300\">\n                    <div class=\"certification-icon\">\n                        <i class=\"fas fa-globe\"></i>\n                    </div>\n                    <h3>FCRA Registration</h3>\n                    <p>Foreign Contribution Regulation Act registration for international donations</p>\n                    <div class=\"certification-validity\">\n                        <span>Registration No: 011540025</span>\n                    </div>\n                    <a href=\"#\" class=\"certification-link\">\n                        <i class=\"fas fa-download\"></i>\n                        Download Certificate\n                    </a>\n                </div>\n\n                <div class=\"certification-card\" data-aos=\"fade-up\" data-aos-delay=\"400\">\n                    <div class=\"certification-icon\">\n                        <i class=\"fas fa-building\"></i>\n                    </div>\n                    <h3>NGO Darpan</h3>\n                    <p>Registered on NGO Darpan portal with unique ID</p>\n                    <div class=\"certification-validity\">\n                        <span>ID: DL/2005/0012345</span>\n                    </div>\n                    <a href=\"#\" class=\"certification-link\">\n                        <i class=\"fas fa-external-link-alt\"></i>\n                        View on Portal\n                    </a>\n                </div>\n            </div>\n        </div>\n    </section>\n\n    <!-- Call to Action -->\n    <section class=\"cta-section\" data-aos=\"fade-up\">\n        <div class=\"container\">\n            <div class=\"cta-content\">\n                <h2 data-aos=\"fade-up\">Stay Updated with Our Progress</h2>\n                <p data-aos=\"fade-up\">Subscribe to receive our annual reports and impact updates directly in your inbox</p>\n                <div class=\"cta-buttons\" data-aos=\"fade-up\">\n                    <a href=\"/contact\" class=\"btn btn-primary\">\n                        <i class=\"fas fa-envelope\"></i>\n                        Subscribe to Updates\n                    </a>\n                    <a href=\"/impact\" class=\"btn btn-secondary\">\n                        <i class=\"fas fa-chart-line\"></i>\n                        View All Impact\n                    </a>\n                </div>\n            </div>\n        </div>\n    </section>\n</main>\n\n<link rel=\"stylesheet\" href=\"/css/reports.css\">\n\n<script>\n    // Initialize AOS\n    AOS.init({\n        duration: 300,\n        offset: 20,\n        once: true,\n        easing: 'ease-out',\n        delay: 0\n    });\n\n    // Animate financial stats\n    const observerOptions = {\n        threshold: 0.5,\n        rootMargin: '0px 0px -100px 0px'\n    };\n\n    const countObserver = new IntersectionObserver((entries) => {\n        entries.forEach(entry => {\n            if (entry.isIntersecting) {\n                const counter = entry.target;\n                const target = parseInt(counter.textContent.replace(/\\D/g, ''));\n                animateCounter(counter, target);\n                countObserver.unobserve(counter);\n            }\n        });\n    }, observerOptions);\n\n    document.querySelectorAll('.stat-value').forEach(counter => {\n        if (counter.textContent.includes('₹') || counter.textContent.includes('%')) {\n            countObserver.observe(counter);\n        }\n    });\n\n    function animateCounter(element, target) {\n        let count = 0;\n        const increment = target / 50;\n        const timer = setInterval(() => {\n            count += increment;\n            if (count >= target) {\n                count = target;\n                clearInterval(timer);\n            }\n            \n            const prefix = element.textContent.includes('₹') ? '₹' : '';\n            const suffix = element.textContent.includes('%') ? '%' : '';\n            const formatted = target > 100000 ? \n                (Math.floor(count / 100000) * 100000).toLocaleString('en-IN') : \n                Math.floor(count).toLocaleString('en-IN');\n                \n            element.textContent = prefix + formatted + suffix;\n        }, 30);\n    }\n\n    // Animate allocation bars\n    const barObserver = new IntersectionObserver((entries) => {\n        entries.forEach(entry => {\n            if (entry.isIntersecting) {\n                const bars = entry.target.querySelectorAll('.allocation-fill');\n                bars.forEach((bar, index) => {\n                    setTimeout(() => {\n                        bar.style.transition = 'width 1s ease-out';\n                        bar.style.width = bar.getAttribute('style').match(/width: (\\d+%)/)[1];\n                    }, index * 200);\n                });\n                barObserver.unobserve(entry.target);\n            }\n        });\n    }, observerOptions);\n\n    document.querySelectorAll('.allocation-chart').forEach(chart => {\n        // Reset bar widths\n        chart.querySelectorAll('.allocation-fill').forEach(bar => {\n            const targetWidth = bar.style.width;\n            bar.style.width = '0%';\n            bar.setAttribute('data-target', targetWidth);\n        });\n        barObserver.observe(chart);\n    });\n</script>\n\n<%- include('../partials/footer') %>