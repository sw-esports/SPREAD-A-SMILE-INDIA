<script>
    // Impact calculator
    const donationInput = document.getElementById('donationAmount');
    const mealsImpact = document.getElementById('mealsImpact');
    const educationImpact = document.getElementById('educationImpact');
    const healthImpact = document.getElementById('healthImpact');

    function updateImpact() {
        const amount = parseInt(donationInput.value) || 0;
        const meals = Math.floor(amount / 17); // ₹17 per meal
        
        mealsImpact.textContent = `${meals} meals`;
        
        if (amount >= 1500) {
            educationImpact.textContent = '1 child\'s complete education';
            healthImpact.textContent = 'Complete healthcare';
        } else if (amount >= 750) {
            educationImpact.textContent = '1 child\'s education support';
            healthImpact.textContent = 'Basic healthcare';
        } else if (amount >= 500) {
            educationImpact.textContent = 'Education materials';
            healthImpact.textContent = 'Health checkups';
        } else {
            educationImpact.textContent = 'School supplies';
            healthImpact.textContent = 'Basic care';
        }
    }

    donationInput.addEventListener('input', updateImpact);
    updateImpact();

    // Donation button handlers
    document.querySelectorAll('[data-amount]').forEach(btn => {
        btn.addEventListener('click', function() {
            const amount = this.dataset.amount;
            const type = this.dataset.type || 'onetime';
            const campaign = this.dataset.campaign || 'general';
            const child = this.dataset.child || '';
            
            // Simulate donation process
            showDonationModal(amount, type, campaign, child);
        });
    });

    function showDonationModal(amount, type, campaign, child) {
        let message = `Proceeding to donate ₹${amount}`;
        if (type === 'monthly') message += ' per month';
        if (child) message += ` to sponsor ${child}`;
        if (campaign !== 'general') message += ` for ${campaign} campaign`;
        
        alert(message + '\n\nIn a real implementation, this would redirect to a secure payment gateway.');
    }

    // Custom amount donation
    const customAmountBtn = document.querySelector('.custom-donate-btn');
    const customAmountInput = document.getElementById('customAmount');
    
    customAmountBtn.addEventListener('click', function() {
        const amount = customAmountInput.value;
        if (amount && amount >= 100) {
            showDonationModal(amount, 'onetime', 'general', '');
        } else {
            alert('Please enter an amount of at least ₹100');
        }
    });

    // Progress bar animations
    function animateProgressBars() {
        document.querySelectorAll('.progress-fill').forEach(bar => {
            const width = bar.style.width;
            bar.style.width = '0%';
            setTimeout(() => {
                bar.style.width = width;
            }, 500);
        });
    }

    // Trigger progress animation when in view
    const progressObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                animateProgressBars();
                progressObserver.unobserve(entry.target);
            }
        });
    });

    const campaignSection = document.querySelector('.urgent-campaigns-section');
    if (campaignSection) {
        progressObserver.observe(campaignSection);
    }

    // Pulse animation for urgent button
    setInterval(() => {
        const pulseBtn = document.querySelector('.pulse');
        if (pulseBtn) {
            pulseBtn.style.transform = 'scale(1.05)';
            setTimeout(() => {
                pulseBtn.style.transform = 'scale(1)';
            }, 200);
        }
    }, 3000);
</script>

