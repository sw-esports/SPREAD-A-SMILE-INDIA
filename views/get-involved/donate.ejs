<script>
// Tax calculator functionality
document.addEventListener('DOMContentLoaded', function() {
    const donationAmount = document.getElementById('donationAmount');
    const taxBracket = document.getElementById('taxBracket');
    const taxDeduction = document.getElementById('taxDeduction');
    const taxSaved = document.getElementById('taxSaved');
    const effectiveCost = document.getElementById('effectiveCost');
    
    function calculateTax() {
        const amount = parseFloat(donationAmount.value) || 0;
        const bracket = parseFloat(taxBracket.value) || 30;
        
        const deduction = amount * 0.5; // 50% under 80G
        const saved = deduction * (bracket / 100);
        const effective = amount - saved;
        
        taxDeduction.textContent = `₹${deduction.toLocaleString()}`;
        taxSaved.textContent = `₹${saved.toLocaleString()}`;
        effectiveCost.textContent = `₹${effective.toLocaleString()}`;
    }
    
    donationAmount.addEventListener('input', calculateTax);
    taxBracket.addEventListener('change', calculateTax);
});

// UPI copy functionality
function copyUPI() {
    navigator.clipboard.writeText('spreadasmile@upi').then(function() {
        alert('UPI ID copied to clipboard!');
    });
}

// Custom amount toggle
document.addEventListener('DOMContentLoaded', function() {
    const customRadio = document.querySelector('input[value="custom"]');
    const customInput = document.querySelector('.custom-amount-input');
    const amountRadios = document.querySelectorAll('input[name="amount"]');
    
    amountRadios.forEach(radio => {
        radio.addEventListener('change', function() {
            if (this.value === 'custom') {
                customInput.style.display = 'block';
            } else {
                customInput.style.display = 'none';
            }
        });
    });
});
</script>

