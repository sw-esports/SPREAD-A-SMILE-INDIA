<%- include('../partials/header') %>

<main class="main-content">
    <!-- Get Involved Hero Section -->
    <section class="get-involved-hero-section" data-aos="fade-up">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">Get Involved</h1>
                <p class="hero-subtitle">Join our mission to transform lives</p>
                <p class="hero-description">
                    There are many ways to support our work and make a difference in the lives of street children. 
                    Whether you have time, skills, or resources to share, we welcome you to be part of our journey.
                </p>
            </div>
        </div>
    </section>

    <!-- Ways to Get Involved Section -->
    <section class="involvement-ways-section" data-aos="fade-up">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Ways to Make a Difference</h2>
                <p class="section-description">Choose how you'd like to contribute to our mission</p>
            </div>
            
            <div class="involvement-grid">
                <div class="involvement-card featured-card" data-aos="zoom-in">
                    <div class="involvement-icon">
                        <i class="fas fa-hands-helping"></i>
                    </div>
                    <div class="involvement-content">
                        <h3>Volunteer</h3>
                        <p class="involvement-description">
                            Give your time and skills to directly impact children's lives. Join our Thursday Langar, 
                            teach children, or help with administrative tasks.
                        </p>
                        <div class="involvement-stats">
                            <div class="stat-item">
                                <span class="stat-number">100+</span>
                                <span class="stat-label">Active Volunteers</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number">Weekly</span>
                                <span class="stat-label">Opportunities</span>
                            </div>
                        </div>
                        <div class="involvement-benefits">
                            <span class="benefit-tag">Direct Impact</span>
                            <span class="benefit-tag">Flexible Timing</span>
                            <span class="benefit-tag">Community</span>
                        </div>
                        <a href="/get-involved/volunteer" class="btn btn-primary">
                            <i class="fas fa-hand-holding-heart"></i>
                            Start Volunteering
                        </a>
                    </div>
                </div>

                <div class="involvement-card" data-aos="zoom-in" data-aos-delay="100">
                    <div class="involvement-icon">
                        <i class="fas fa-heart"></i>
                    </div>
                    <div class="involvement-content">
                        <h3>Donate</h3>
                        <p class="involvement-description">
                            Your financial support helps us provide education, healthcare, nutrition, and 
                            vocational training to street children and their families.
                        </p>
                        <div class="involvement-stats">
                            <div class="stat-item">
                                <span class="stat-number">₹500</span>
                                <span class="stat-label">Feeds a child for a month</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number">₹2000</span>
                                <span class="stat-label">School kit & uniform</span>
                            </div>
                        </div>
                        <div class="involvement-benefits">
                            <span class="benefit-tag">Transparent Use</span>
                            <span class="benefit-tag">Regular Updates</span>
                            <span class="benefit-tag">Tax Benefits</span>
                        </div>
                        <a href="/get-involved/donate" class="btn btn-secondary">
                            <i class="fas fa-rupee-sign"></i>
                            Donate Now
                        </a>
                    </div>
                </div>

                <div class="involvement-card" data-aos="zoom-in" data-aos-delay="200">
                    <div class="involvement-icon">
                        <i class="fas fa-handshake"></i>
                    </div>
                    <div class="involvement-content">
                        <h3>Partner</h3>
                        <p class="involvement-description">
                            Collaborate with us through corporate partnerships, institutional alliances, 
                            or community-based initiatives.
                        </p>
                        <div class="involvement-stats">
                            <div class="stat-item">
                                <span class="stat-number">25+</span>
                                <span class="stat-label">Active Partners</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number">CSR</span>
                                <span class="stat-label">Compliance</span>
                            </div>
                        </div>
                        <div class="involvement-benefits">
                            <span class="benefit-tag">CSR Fulfillment</span>
                            <span class="benefit-tag">Brand Visibility</span>
                            <span class="benefit-tag">Social Impact</span>
                        </div>
                        <a href="/get-involved/collaborate" class="btn btn-outline">
                            <i class="fas fa-users-cog"></i>
                            Explore Partnership
                        </a>
                    </div>
                </div>

                <div class="involvement-card" data-aos="zoom-in" data-aos-delay="300">
                    <div class="involvement-icon">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <div class="involvement-content">
                        <h3>Career</h3>
                        <p class="involvement-description">
                            Join our team full-time and make social work your career. We offer positions 
                            in education, administration, and program management.
                        </p>
                        <div class="involvement-stats">
                            <div class="stat-item">
                                <span class="stat-number">Growing</span>
                                <span class="stat-label">Team</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number">Meaningful</span>
                                <span class="stat-label">Work</span>
                            </div>
                        </div>
                        <div class="involvement-benefits">
                            <span class="benefit-tag">Purpose-Driven</span>
                            <span class="benefit-tag">Growth Opportunities</span>
                            <span class="benefit-tag">Social Impact</span>
                        </div>
                        <a href="/get-involved/careers" class="btn btn-outline">
                            <i class="fas fa-user-tie"></i>
                            View Opportunities
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Impact Statistics Section -->
    <section class="impact-stats-section" data-aos="fade-up">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Your Impact Matters</h2>
                <p class="section-description">See how community support has transformed lives</p>
            </div>
            
            <div class="impact-grid">
                <div class="impact-stat-card" data-aos="zoom-in">
                    <div class="impact-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div class="impact-number">300+</div>
                    <div class="impact-label">Children Transformed</div>
                    <p class="impact-description">Lives changed through education and care</p>
                </div>

                <div class="impact-stat-card" data-aos="zoom-in" data-aos-delay="100">
                    <div class="impact-icon">
                        <i class="fas fa-school"></i>
                    </div>
                    <div class="impact-number">100+</div>
                    <div class="impact-label">School Enrollments</div>
                    <p class="impact-description">Street children now in classrooms</p>
                </div>

                <div class="impact-stat-card" data-aos="zoom-in" data-aos-delay="200">
                    <div class="impact-icon">
                        <i class="fas fa-female"></i>
                    </div>
                    <div class="impact-number">85+</div>
                    <div class="impact-label">Women Empowered</div>
                    <p class="impact-description">Mothers earning through skills training</p>
                </div>

                <div class="impact-stat-card" data-aos="zoom-in" data-aos-delay="300">
                    <div class="impact-icon">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <div class="impact-number">20</div>
                    <div class="impact-label">Years of Service</div>
                    <p class="impact-description">Two decades of dedicated work</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Success Stories Preview Section -->
    <section class="success-preview-section" data-aos="fade-up">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Stories of Transformation</h2>
                <p class="section-description">Real stories from the lives we've touched</p>
            </div>
            
            <div class="stories-grid">
                <div class="story-card" data-aos="fade-right">
                    <div class="story-image">
                        <img src="/src/images/stories/student-success.jpg" alt="Student success story" loading="lazy">
                    </div>
                    <div class="story-content">
                        <h3>"From Traffic Lights to Classroom"</h3>
                        <p>
                            Rahul used to beg at traffic signals. Today, he's in Class 8 and dreams of becoming a teacher. 
                            "I want to teach other children like me," he says with a bright smile.
                        </p>
                        <div class="story-impact">
                            <span class="impact-tag">Education</span>
                            <span class="impact-tag">Dreams</span>
                        </div>
                    </div>
                </div>

                <div class="story-card" data-aos="fade-left">
                    <div class="story-image">
                        <img src="/src/images/stories/mother-empowerment.jpg" alt="Mother empowerment story" loading="lazy">
                    </div>
                    <div class="story-content">
                        <h3>"Independence Through Skills"</h3>
                        <p>
                            Sunita learned tailoring through our vocational program. Now she runs her own small business 
                            and can afford to send her three children to school.
                        </p>
                        <div class="story-impact">
                            <span class="impact-tag">Skills Training</span>
                            <span class="impact-tag">Empowerment</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="stories-cta">
                <a href="/impact/stories" class="btn btn-primary">
                    <i class="fas fa-book-open"></i>
                    Read More Stories
                </a>
            </div>
        </div>
    </section>

    <!-- Community Support Section -->
    <section class="community-support-section" data-aos="fade-up">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Join Our Community</h2>
                <p class="section-description">Connect with like-minded people making a difference</p>
            </div>
            
            <div class="community-features">
                <div class="community-feature" data-aos="fade-up">
                    <div class="feature-icon">
                        <i class="fab fa-whatsapp"></i>
                    </div>
                    <h3>WhatsApp Community</h3>
                    <p>Join our volunteer WhatsApp group for updates, coordination, and community support</p>
                    <a href="#" class="btn btn-success">Join WhatsApp Group</a>
                </div>

                <div class="community-feature" data-aos="fade-up" data-aos-delay="100">
                    <div class="feature-icon">
                        <i class="fab fa-instagram"></i>
                    </div>
                    <h3>Follow Our Journey</h3>
                    <p>Stay updated with our daily activities and success stories on social media</p>
                    <div class="social-links">
                        <a href="https://instagram.com/sangitamehra1" class="social-btn instagram">
                            <i class="fab fa-instagram"></i>
                            Instagram
                        </a>
                        <a href="#" class="social-btn facebook">
                            <i class="fab fa-facebook"></i>
                            Facebook
                        </a>
                    </div>
                </div>

                <div class="community-feature" data-aos="fade-up" data-aos-delay="200">
                    <div class="feature-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <h3>Newsletter</h3>
                    <p>Get monthly updates about our programs, impact, and upcoming events</p>
                    <form class="newsletter-form">
                        <input type="email" placeholder="Enter your email" required>
                        <button type="submit" class="btn btn-primary">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Actions Section -->
    <section class="quick-actions-section" data-aos="fade-up">
        <div class="container">
            <div class="quick-actions-content">
                <h2>Take Action Today</h2>
                <p>Every action, no matter how small, creates ripples of positive change</p>
                
                <div class="quick-actions-grid">
                    <a href="/get-involved/volunteer" class="quick-action-btn volunteer" data-aos="zoom-in">
                        <div class="action-icon">
                            <i class="fas fa-hand-holding-heart"></i>
                        </div>
                        <div class="action-content">
                            <h3>Volunteer This Week</h3>
                            <p>Join our Thursday Langar</p>
                        </div>
                        <div class="action-arrow">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </a>

                    <a href="/get-involved/donate" class="quick-action-btn donate" data-aos="zoom-in" data-aos-delay="100">
                        <div class="action-icon">
                            <i class="fas fa-heart"></i>
                        </div>
                        <div class="action-content">
                            <h3>Donate ₹500</h3>
                            <p>Feed a child for a month</p>
                        </div>
                        <div class="action-arrow">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </a>

                    <a href="/contact" class="quick-action-btn contact" data-aos="zoom-in" data-aos-delay="200">
                        <div class="action-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="action-content">
                            <h3>Call & Connect</h3>
                            <p>Speak with our team</p>
                        </div>
                        <div class="action-arrow">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('../partials/footer') %>