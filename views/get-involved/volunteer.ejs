    <!-- Volunteer Opportunities Section -->
    <section class="volunteer-opportunities-section" data-aos="fade-up">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">How You Can Help</h2>
                <p class="section-description">Choose from various volunteering opportunities that match your skills and schedule</p>
            </div>
            
            <div class="opportunities-grid">
                <div class="opportunity-card featured-card" data-aos="zoom-in">
                    <div class="opportunity-icon">
                        <i class="fas fa-utensils"></i>
                    </div>
                    <div class="opportunity-content">
                        <h3>Thursday Langar & Activities</h3>
                        <p class="opportunity-description">
                            Our signature weekly program where volunteers prepare traditional free kitchen meals 
                            and engage children with games, lessons, and activities.
                        </p>
                        <div class="opportunity-details">
                            <div class="detail-item">
                                <i class="fas fa-calendar"></i>
                                <span>Every Thursday</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-clock"></i>
                                <span>2:00 PM - 5:00 PM</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-users"></i>
                                <span>15-20 volunteers needed</span>
                            </div>
                        </div>
                        <div class="opportunity-activities">
                            <span class="activity-tag">Meal Preparation</span>
                            <span class="activity-tag">Child Interaction</span>
                            <span class="activity-tag">Games & Activities</span>
                            <span class="activity-tag">Community Building</span>
                        </div>
                        <div class="opportunity-impact">
