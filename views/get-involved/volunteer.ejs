<%- include('../partials/header') %>

<main class="main-content">
    <!-- Volunteer Hero Section -->
    <section class="volunteer-hero-section" data-aos="fade-up">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
